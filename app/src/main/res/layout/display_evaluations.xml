<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/thirdtohome"
    style="@style/LinearLayoutOverlay"
    android:backgroundTint="#DD050505"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/general"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/evalTitle"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="10dp"
                    android:text="Evaluation"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/d1"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R = Relaxation Level"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/q1"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="q1" />

                <SeekBar
                    android:id="@+id/Rseek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:max="9"
                    android:progress="4"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/d2"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A = Amp Level"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/q2"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="q2" />

                <SeekBar
                    android:id="@+id/Aseek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/d3"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I = Imagine Before Action"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/q3"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="q3" />

                <SeekBar
                    android:id="@+id/Iseek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/d4"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D = Dominate THIS Moment"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/q4"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="q4" />

                <SeekBar
                    android:id="@+id/Dseek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/d5"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E = Embrace Advirsity"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/q5"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="q5" />

                <SeekBar
                    android:id="@+id/Eseek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/d6"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R = Routines"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/q6"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="q6" />

                <SeekBar
                    android:id="@+id/R2seek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes:" />

                <EditText
                    android:id="@+id/notesText"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/postGamePitcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/awareness"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Awareness Questions"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pq1"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="pq1" />

                <SeekBar
                    android:id="@+id/pitch1Seek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/pq2"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="pq2" />

                <SeekBar
                    android:id="@+id/pitch2Seek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/pitch1Q"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pitcher1" />

                <EditText
                    android:id="@+id/pitch1A"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/pitch2Q"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pitcher2" />

                <EditText
                    android:id="@+id/pitch2A"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/pitch3Q"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pitcher3" />

                <EditText
                    android:id="@+id/pitch3A"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/pitch4Q"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pitcher4" />

                <EditText
                    android:id="@+id/pitch4A"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/postBullpen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/bullTitle"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bullpen Notes"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/bq1"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="How would you rate today's bullpen?" />

                <SeekBar
                    android:id="@+id/bpSeek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/bull1"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Notes:" />

                <EditText
                    android:id="@+id/b1Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/bull2"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How did you feel during your bullpen?" />

                <EditText
                    android:id="@+id/b2Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/bull3"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How was your command during your bullpen?" />

                <EditText
                    android:id="@+id/b3Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/bull4"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What areas will you choose to improve upon based off of today's bullpen?" />

                <EditText
                    android:id="@+id/b4Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/postGameHitter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ab6"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Bats"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/abd1"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ab1" />

                <SeekBar
                    android:id="@+id/abSeek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/abd2"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="ab2" />

                <SeekBar
                    android:id="@+id/ab2Seek"
                    style="@style/SeekStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:max="9"
                    android:progress="4" />

                <TextView
                    android:id="@+id/textView7"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Bat 1 Notes:" />

                <EditText
                    android:id="@+id/ab1Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView8"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Bat 2 Notes:" />

                <EditText
                    android:id="@+id/ab2Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView9"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Bat 3 Notes:" />

                <EditText
                    android:id="@+id/ab3Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView10"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Bat 4 Notes:" />

                <EditText
                    android:id="@+id/ab4Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView11"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Bat 5 Notes:" />

                <EditText
                    android:id="@+id/ab5Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView12"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Bat 6 Notes:" />

                <EditText
                    android:id="@+id/ab6Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView13"
                    style="@style/TextViewButtonCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="At Bat 7 Notes:" />

                <EditText
                    android:id="@+id/ab7Notes"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:ems="10"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <EditText
                android:id="@+id/aNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Notes"
                android:visibility="gone"/>


            <EditText
                android:id="@+id/aNotesText"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.43"
                android:ems="10"
                android:inputType="textMultiLine"
                android:visibility="gone" />

            <Button
                android:id="@+id/submitBtn"
                style="@style/ButtonStyleCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>